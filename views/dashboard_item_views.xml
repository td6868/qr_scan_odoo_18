<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Item Tree View -->
    <record id="view_dashboard_item_tree" model="ir.ui.view">
        <field name="name">dashboard.item.tree</field>
        <field name="model">dashboard.item</field>
        <field name="arch" type="xml">
            <list string="Quản lý Dashboard">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="url"/>
                <field name="icon"/>
                <field name="color"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Dashboard Item Form View -->
    <record id="view_dashboard_item_form" model="ir.ui.view">
        <field name="name">dashboard.item.form</field>
        <field name="model">dashboard.item</field>
        <field name="arch" type="xml">
            <form string="Dashboard Item">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="VD: Dashboard Vận chuyển"/>
                            <field name="sequence"/>
                            <field name="url" placeholder="/dashboard/stock_picking"/>
                        </group>
                        <group>
                            <field name="icon"/>
                            <field name="color"/>
                            <field name="open_new_tab"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Mô tả ngắn về dashboard này..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dashboard_item_admin" model="ir.actions.act_window">
        <field name="name">Quản lý Dashboards</field>
        <field name="res_model">dashboard.item</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
