<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_inherit_qr" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.qr</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_invoice']" position="before">
                <button name="action_view_image_proof" type="object" class="oe_stat_button"
                        icon="fa-image" string="Ảnh minh chứng" widget="statinfo" invisible="'state' == 'draft' "/>
            </xpath>
        </field>
    </record>
</odoo>