<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- list View cho QR Scan History -->
    <record id="view_qr_scan_history_list" model="ir.ui.view">
        <field name="name">stock.location.scan.history.list</field>
        <field name="model">stock.location.scan.history</field>
        <field name="arch" type="xml">
            <list string="Lịch sử quét QR">
                <field name="scan_time"/>
                <field name="user_id"/>
                <field name="location_id"/>
                <field name="total_products"/>
                <field name="products_with_changes"/>
                <field name="total_quantity_added"/>
                <field name="total_quantity_removed"/>
                <field name="note"/>
            </list>
        </field>
    </record>

    <!-- Form View cho QR Scan History -->
    <record id="view_qr_scan_history_form" model="ir.ui.view">
        <field name="name">stock.location.scan.history.form</field>
        <field name="model">stock.location.scan.history</field>
        <field name="arch" type="xml">
            <form string="Lịch sử quét QR">
                <sheet>
                    <group>
                        <group>
                            <field name="scan_time"/>
                            <field name="user_id"/>
                            <field name="location_id"/>
                        </group>
                        <group>
                            <field name="total_products"/>
                            <field name="products_with_changes"/>
                            <field name="total_quantity_added"/>
                            <field name="total_quantity_removed"/>
                        </group>
                    </group>
                    <group>
                        <field name="note"/>
                        <field name="product_changes_summary" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View cho QR Scan History -->
    <record id="view_qr_scan_history_search" model="ir.ui.view">
        <field name="name">stock.location.scan.history.search</field>
        <field name="model">stock.location.scan.history</field>
        <field name="arch" type="xml">
            <search>
                <field name="user_id"/>
                <field name="location_id"/>
                <field name="note"/>
                <filter string="Hôm nay" name="today" 
                        domain="[('scan_time', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),
                                ('scan_time', '&lt;', datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="Tuần này" name="this_week" 
                        domain="[('scan_time', '&gt;=', (datetime.datetime.now() - datetime.timedelta(days=7)).strftime('%Y-%m-%d 00:00:00'))]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Người quét" name="group_by_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Địa điểm" name="group_by_location" context="{'group_by': 'location_id'}"/>
                    <filter string="Ngày" name="group_by_date" context="{'group_by': 'scan_time:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Menu Action cho QR Scan History -->
    <record id="action_qr_scan_stock_location_history" model="ir.actions.act_window">
        <field name="name">Lịch sử quét QR</field>
        <field name="res_model">stock.location.scan.history</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_qr_scan_history_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có lịch sử quét QR nào!
            </p>
            <p>
                Lịch sử quét QR sẽ được ghi lại tự động khi bạn quét mã QR của các địa điểm kho.
            </p>
        </field>
    </record>
</odoo>