<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view cho stock.picking với trường image_proof -->
    <record id="view_picking_form_inherit_qr" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.qr</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Trạng thái">
                    <group>
                        <group string="Chuẩn bị hàng" col="2">
                            <field name="is_scanned"/>
                            <field name="scan_date" readonly="1"/>
                            <field name="scan_user_id" readonly="1"/>
                            <field name="scan_note" readonly="1" colspan="2"/>

                            <field name="image_proof" widget="image" readonly="1"
                                class="oe_avatar"                                
                                style="max-width: 250px; max-height: 250px; border: 1px solid #ccc;" colspan="2"/>
                        </group>

                        <group string="Vận chuyển" col="2">
                            <field name="is_shipped"/>
                            <field name="shipping_date" readonly="1"/>
                            <field name="shipping_type" readonly="1"/>
                            <field name="scan_user_id" readonly="1"/>
                            <field name="shipping_phone" readonly="1"/>
                            <field name="shipping_company" readonly="1"/>
                            <field name="shipping_note" readonly="1" colspan="2"/>

                            <field name="shipping_image" widget="image" readonly="1"
                                class="oe_avatar"                                
                                style="max-width: 250px; max-height: 250px; border: 1px solid #ccc;" colspan="2"/>
                        </group>
                    </group>
                </page>
                <page string="Xác nhận sản phẩm xuất kho">
                    <field name="move_line_confirmed_ids">
                        <kanban>
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="oe_kanban_global_click o_kanban_record">
                                        <div class="o_kanban_details">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <strong><field name="product_id"/></strong>
                                                <div>
                                                    <field name="is_confirmed"/>
                                                </div>
                                            </div>

                                            <!-- <div>
                                                <span><strong>Số lượng xuất kho: </strong></span>
                                                <field name="move_line_quantity" readonly="1"/>
                                            </div> -->

                                            <div>
                                                <span><strong>Số lượng xác nhận: </strong></span>
                                                <field name="quantity_confirmed"/>
                                            </div>

                                            <!-- <div>
                                                <span><strong>Chênh lệch: </strong></span>
                                                <field name="difference_quantity" readonly="1"/>
                                            </div> -->

                                            <div>
                                                <span><strong>Ghi chú: </strong></span>
                                                <field name="confirm_note"/>
                                            </div>

                                            <div class="mt-2">
                                                <small>
                                                    <i>Xác nhận bởi: </i>
                                                    <field name="confirm_user_id" readonly="1"/>
                                                    <span> | </span>
                                                    <field name="confirm_date" readonly="1"/>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>

                        <form>
                            <group>
                                <group>
                                    <field name="product_id" readonly="1"/>
                                    <field name="move_line_id" readonly="1"/>
                                    <field name="move_line_quantity" readonly="1"/>
                                </group>
                                <group>
                                    <field name="quantity_confirmed"/>
                                    <field name="difference_quantity" readonly="1"/>
                                    <field name="is_confirmed" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <field name="confirm_note" placeholder="Ghi chú về việc xác nhận sản phẩm..."/>
                            </group>
                            <group>
                                <field name="confirm_date" readonly="1"/>
                                <field name="confirm_user_id" readonly="1"/>
                            </group>
                        </form>
                    </field>
                </page>

                <!-- <page string="Xác nhận giao hàng">
                    <group>
                        <field name="is_shipped"/>
                        <field name="shipping_date" readonly="1"/>
                        <field name="scan_user_id" readonly="1"/>
                        <field name="shipping_note" readonly="1"/>
                        <field name="shipping_type" readonly="1"/>
                        <field name="shipping_image" widget="image" class="oe_avatar" readonly="1"/>
                    </group>
                </page> -->
            </notebook>
        </field>
    </record>

    <!-- list view cho stock.move.line.confirm -->
    <record id="view_stock_move_line_confirm_list" model="ir.ui.view">
        <field name="name">stock.move.line.confirm.list</field>
        <field name="model">stock.move.line.confirm</field>
        <field name="arch" type="xml">
            <list string="Xác nhận sản phẩm">
                <field name="picking_id"/>
                <field name="product_id"/>
                <field name="move_line_quantity" string="SL Move Line"/>
                <field name="quantity_confirmed"/>
                <field name="difference_quantity" string="Chênh lệch"/>
                <field name="is_confirmed"/>
                <field name="confirm_date"/>
                <field name="confirm_user_id"/>
            </list>
        </field>
    </record>

    <!-- Form view cho stock.move.line.confirm -->
    <record id="view_stock_move_line_confirm_form" model="ir.ui.view">
        <field name="name">stock.move.line.confirm.form</field>
        <field name="model">stock.move.line.confirm</field>
        <field name="arch" type="xml">
            <form string="Xác nhận sản phẩm">
                <header>
                    <field name="is_confirmed" widget="boolean_button"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="picking_id" readonly="1"/>
                            <field name="move_line_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="move_line_quantity" readonly="1"/>
                            <field name="quantity_confirmed"/>
                            <field name="difference_quantity" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="confirm_note" placeholder="Ghi chú về việc xác nhận sản phẩm..."/>
                    </group>
                    <group>
                        <group>
                            <field name="confirm_date" readonly="1"/>
                            <field name="confirm_user_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view cho stock.move.line.confirm -->
    <record id="view_stock_move_line_confirm_search" model="ir.ui.view">
        <field name="name">stock.move.line.confirm.search</field>
        <field name="model">stock.move.line.confirm</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm xác nhận sản phẩm">
                <field name="picking_id"/>
                <field name="product_id"/>
                <field name="confirm_user_id"/>
                <filter string="Đã xác nhận" name="confirmed" domain="[('is_confirmed', '=', True)]"/>
                <filter string="Chưa xác nhận" name="not_confirmed" domain="[('is_confirmed', '=', False)]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Phiếu xuất kho" name="group_picking" domain="[]" context="{'group_by': 'picking_id'}"/>
                    <filter string="Sản phẩm" name="group_product" domain="[]" context="{'group_by': 'product_id'}"/>
                    <filter string="Người xác nhận" name="group_user" domain="[]" context="{'group_by': 'confirm_user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action cho stock.move.line.confirm -->
    <record id="action_stock_move_line_confirm" model="ir.actions.act_window">
        <field name="name">Xác nhận sản phẩm giao hàng</field>
        <field name="res_model">stock.move.line.confirm</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_stock_move_line_confirm_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có xác nhận sản phẩm nào!
            </p>
            <p>
                Các xác nhận sản phẩm sẽ được tạo tự động khi quét QR code phiếu xuất kho.
            </p>
        </field>
    </record>

    <!-- Client Action cho QR Scanner -->
    <record id="action_stock_picking_qr_scanner" model="ir.actions.client">
        <field name="name">Quét mã QR phiếu xuất kho</field>
        <field name="tag">stock_picking_qr_scanner_action</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_stock_qr_code_root"
              name="QR xuất kho"
              sequence="50"/>

    <menuitem id="menu_stock_picking_qr_scanner"
              name="Quét mã QR"
              parent="menu_stock_qr_code_root"
              action="action_stock_picking_qr_scanner"
              sequence="10"/>

    <menuitem id="menu_stock_move_line_confirm"
              name="Xác nhận sản phẩm"
              parent="menu_stock_qr_code_root"
              action="action_stock_move_line_confirm"
              sequence="20"/>
    <!-- <menuitem id="menu_stock_picking_shipping"
              name="Xác nhận Giao hàng"
              parent="menu_stock_qr_code_root"
              action="action_stock_move_line_confirm"
              sequence="30"/> -->

</odoo>