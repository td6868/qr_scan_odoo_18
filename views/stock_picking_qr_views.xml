<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <!-- Form view cho stock.picking với trường image_proof  -->
    <record id="view_picking_form_inherit_qr" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.qr</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- #Add action_print_picking button replace print -->
            <!-- <xpath expr="//button[@name='do_print_picking']" position="replace">
                <button name="action_print_picking" string="In" type="object" class="btn btn-primary">
                </button>
            </xpath> -->

            <notebook position="inside">
                 <!-- Thêm vào trong record id="view_picking_form_inherit_qr" sau page "Trạng thái"  -->
                <page string="Lịch sử quét QR" groups="stock.group_stock_manager">

                    <group col="2">
                        <field name="scan_history_ids" nolabel="1" readonly="1" force_save="1">

                            <list>
                                <field name="scan_date"/>
                                <field name="scan_user_id"/>
                                <field name="scan_type"/>
                                <field name="scan_note"/>
                                <field name="image_count"/>
                            </list>
                            <form>
                                <group>
                                    <group>
                                        <field name="scan_date" readonly="1"/>
                                        <field name="scan_user_id" readonly="1"/>
                                        <field name="scan_type" readonly="1"/>
                                        <field name="image_count" readonly="1"/>
                                        <!-- <widget name="info_popover" 
                                            config='{
                                                "title": "Thông tin quan trọng",
                                                "content": "Đây là nội dung hiển thị khi hover",
                                                "trigger": "hover"
                                            }'/>                                                                                                                      -->
                                    </group>
                                    <group>
                                        <field name="scan_note"/>
                                         <!-- Hiển thị thông tin shipping nếu là loại shipping  -->
                                        <field name="shipping_type" readonly="1" invisible="scan_type != 'shipping'"/>
                                        <field name="shipping_phone" readonly="1" invisible="scan_type != 'shipping'"/>
                                        <field name="shipping_company" readonly="1" invisible="scan_type != 'shipping'"/>
                                    </group>
                                </group>
                                
                                 <!-- Hiển thị nhiều ảnh cho cả prepare và shipping  -->
                                <group string="Ảnh xuất kho chuẩn bị hàng" col="3" invisible="scan_type != 'prepare'">
                                    <field name="attachment_ids" mode="kanban" nolabel="1">
                                        <kanban>
                                            <templates>
                                                <t t-name="kanban-box">
                                                    <div class="oe_kanban_global_click" style="max-width: 250px; margin: 8px;">
                                                        <div class="card h-100 shadow-sm border-0" style="border-radius: 12px; overflow: hidden;">
                                                            <div style="height: 180px; overflow: hidden;">
                                                                <img t-att-src="'/web/image/' + record.id.raw_value"
                                                                    class="img-fluid" 
                                                                    style="height: 100%; width: 100%; object-fit: cover;"
                                                                    alt="Ảnh xuất kho"/>
                                                            </div>
                                                            <div class="card-body p-3">
                                                                <h6 class="card-title mb-2" style="font-weight: 600; color: #2c3e50; font-size: 0.9rem;">
                                                                    <field name="name"/>
                                                                </h6>
                                                                <div class="mb-2">
                                                                    <small class="text-muted d-flex align-items-center" style="font-size: 0.75rem;">
                                                                        <i class="fa fa-calendar-o me-1" title="Ngày tạo"></i>
                                                                        <field name="create_date"/>
                                                                    </small>
                                                                </div>
                                                                <div class="mt-2">
                                                                    <span class="badge bg-success rounded-pill" style="font-size: 0.7rem; padding: 4px 8px;">
                                                                        <field name="description"/>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <style>
                                                        .oe_kanban_global_click:hover .card {
                                                            box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
                                                        }
                                                        .card-title {
                                                            display: -webkit-box;
                                                            -webkit-line-clamp: 2;
                                                            -webkit-box-orient: vertical;
                                                            overflow: hidden;
                                                        }
                                                    </style>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>
                                </group>

                                 <!-- Hiển thị nhiều ảnh vận chuyển  -->
                                <group string="Ảnh vận chuyển" col="3" invisible="scan_type != 'shipping'">
                                    <field name="attachment_ids" mode="kanban" nolabel="1">
                                        <kanban>
                                            <templates>
                                                <t t-name="kanban-box">
                                                    <div class="oe_kanban_global_click" style="max-width: 250px; margin: 8px;">
                                                        <div class="card h-100 shadow-sm border-0" style="border-radius: 12px; overflow: hidden;">
                                                            <div style="height: 180px; overflow: hidden;">
                                                                <img t-att-src="'/web/image/' + record.id.raw_value"
                                                                    class="img-fluid" 
                                                                    style="height: 100%; width: 100%; object-fit: cover;"
                                                                    alt="Ảnh vận chuyển"/>
                                                            </div>
                                                            <div class="card-body p-3">
                                                                <h6 class="card-title mb-2" style="font-weight: 600; color: #2c3e50; font-size: 0.9rem;">
                                                                    <field name="name"/>
                                                                </h6>
                                                                <div class="mb-2">
                                                                    <small class="text-muted d-flex align-items-center" style="font-size: 0.75rem;">
                                                                        <i class="fa fa-calendar-o me-1" title="Ngày tạo"></i>
                                                                        <field name="create_date"/>
                                                                    </small>
                                                                </div>
                                                                <div class="mt-2">
                                                                    <span class="badge bg-info rounded-pill" style="font-size: 0.7rem; padding: 4px 8px;">
                                                                        <field name="description"/>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <style>
                                                        .oe_kanban_global_click:hover .card {
                                                            box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
                                                        }
                                                        .card-title {
                                                            display: -webkit-box;
                                                            -webkit-line-clamp: 2;
                                                            -webkit-box-orient: vertical;
                                                            overflow: hidden;
                                                        }
                                                    </style>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>
                                </group>

                                <!-- Thêm hiển thị ảnh nhận hàng -->
                                <group string="Ảnh nhận hàng" col="3" invisible="scan_type != 'receive'">
                                    <field name="attachment_ids" mode="kanban" nolabel="1">
                                        <kanban>
                                            <templates>
                                                <t t-name="kanban-box">
                                                    <div class="oe_kanban_global_click" style="max-width: 250px; margin: 8px;">
                                                        <div class="card h-100 shadow-sm border-0" style="border-radius: 12px; overflow: hidden;">
                                                            <div style="height: 180px; overflow: hidden;">
                                                                <img t-att-src="'/web/image/' + record.id.raw_value"
                                                                    class="img-fluid" 
                                                                    style="height: 100%; width: 100%; object-fit: cover;"
                                                                    alt="Ảnh nhận hàng"/>
                                                            </div>
                                                            <div class="card-body p-3">
                                                                <h6 class="card-title mb-2" style="font-weight: 600; color: #2c3e50; font-size: 0.9rem;">
                                                                    <field name="name"/>
                                                                </h6>
                                                                <div class="mb-2">
                                                                    <small class="text-muted d-flex align-items-center" style="font-size: 0.75rem;">
                                                                        <i class="fa fa-calendar-o me-1" title="Ngày tạo"></i>
                                                                        <field name="create_date"/>
                                                                    </small>
                                                                </div>
                                                                <div class="mt-2">
                                                                    <span class="badge bg-success rounded-pill" style="font-size: 0.7rem; padding: 4px 8px;">
                                                                        <field name="description"/>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <style>
                                                        .oe_kanban_global_click:hover .card {
                                                            box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
                                                        }
                                                        .card-title {
                                                            display: -webkit-box;
                                                            -webkit-line-clamp: 2;
                                                            -webkit-box-orient: vertical;
                                                            overflow: hidden;
                                                        }
                                                    </style>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>
                                </group>

                                <!-- Thêm hiển thị ảnh kiểm hàng -->
                                <group string="Ảnh kiểm hàng" col="3" invisible="scan_type != 'checking'">
                                    <field name="attachment_ids" mode="kanban" nolabel="1">
                                        <kanban>
                                            <templates>
                                                <t t-name="kanban-box">
                                                    <div class="oe_kanban_global_click" style="max-width: 250px; margin: 8px;">
                                                        <div class="card h-100 shadow-sm border-0" style="border-radius: 12px; overflow: hidden;">
                                                            <div style="height: 180px; overflow: hidden;">
                                                                <img t-att-src="'/web/image/' + record.id.raw_value"
                                                                    class="img-fluid" 
                                                                    style="height: 100%; width: 100%; object-fit: cover;"
                                                                    alt="Ảnh kiểm hàng"/>
                                                            </div>
                                                            <div class="card-body p-3">
                                                                <h6 class="card-title mb-2" style="font-weight: 600; color: #2c3e50; font-size: 0.9rem;">
                                                                    <field name="name"/>
                                                                </h6>
                                                                <div class="mb-2">
                                                                    <small class="text-muted d-flex align-items-center" style="font-size: 0.75rem;">
                                                                        <i class="fa fa-calendar-o me-1" title="Ngày tạo"></i>
                                                                        <field name="create_date"/>
                                                                    </small>
                                                                </div>
                                                                <div class="mt-2">
                                                                    <span class="badge bg-warning rounded-pill" style="font-size: 0.7rem; padding: 4px 8px;">
                                                                        <field name="description"/>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <style>
                                                        .oe_kanban_global_click:hover .card {
                                                            box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
                                                        }
                                                        .card-title {
                                                            display: -webkit-box;
                                                            -webkit-line-clamp: 2;
                                                            -webkit-box-orient: vertical;
                                                            overflow: hidden;
                                                        }
                                                    </style>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>
                                </group>
                                <group string="Xác nhận sản phẩm" invisible="scan_type != 'prepare'">
                                    <field name="move_line_confirmed_ids">
                                        <list>
                                            <field name="product_id"/>
                                            <field name="move_quantity" string="SL nhu cầu"/>
                                            <field name="quantity_confirmed"/>
                                            <field name="difference_quantity"/>
                                            <field name="confirm_note"/>
                                            <field name="confirm_date"/>
                                            <field name="confirm_user_id"/>
                                        </list>
                                    </field>
                                </group>
                                <group string="Xác nhận sản phẩm" invisible="scan_type != 'checking'">
                                    <field name="move_line_confirmed_ids">
                                        <list>
                                            <field name="product_id"/>
                                            <field name="move_quantity" string="SL nhu cầu"/>
                                            <field name="quantity_confirmed"/>
                                            <field name="difference_quantity"/>
                                            <field name="confirm_note"/>
                                            <field name="confirm_date"/>
                                            <field name="confirm_user_id"/>
                                        </list>
                                    </field>
                                </group>
                            </form>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

     <!-- list view cho stock.move.line.confirm  -->
    <record id="view_stock_move_line_confirm_list" model="ir.ui.view">
        <field name="name">stock.move.line.confirm.list</field>
        <field name="model">stock.move.line.confirm</field>
        <field name="arch" type="xml">
            <list string="Xác nhận sản phẩm">
                <field name="picking_id"/>
                <field name="product_id"/>
                <field name="move_id"/>
                <field name="move_quantity" string="SL nhu cầu"/>
                <field name="quantity_confirmed"/>
                <field name="difference_quantity" string="Chênh lệch"/>
                <field name="confirm_date"/>
                <field name="confirm_user_id"/>
            </list>
        </field>
    </record>

     <!-- Form view cho stock.move.line.confirm  -->
    <record id="view_stock_move_line_confirm_form" model="ir.ui.view">
        <field name="name">stock.move.line.confirm.form</field>
        <field name="model">stock.move.line.confirm</field>
        <field name="arch" type="xml">
            <form string="Xác nhận sản phẩm">
                <sheet>
                    <group>
                        <group>
                            <field name="picking_id" readonly="1"/>
                            <field name="move_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="move_quantity" readonly="1" string="SL nhu cầu"/>
                            <field name="quantity_confirmed"/>
                            <field name="difference_quantity" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="confirm_note" placeholder="Ghi chú về việc xác nhận sản phẩm..."/>
                    </group>
                    <group>
                        <group>
                            <field name="confirm_date" readonly="1"/>
                            <field name="confirm_user_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <!-- Search view cho stock.move.line.confirm  -->
    <record id="view_stock_move_line_confirm_search" model="ir.ui.view">
        <field name="name">stock.move.line.confirm.search</field>
        <field name="model">stock.move.line.confirm</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm xác nhận sản phẩm">
                <field name="picking_id"/>
                <field name="product_id"/>
                <field name="move_id"/>
                <field name="confirm_user_id"/>
                <!-- <filter string="Có chênh lệch" name="has_difference" domain="[('difference_quantity', '!=', 0)]"/> -->
                <group expand="0" string="Nhóm theo">
                    <filter string="Phiếu xuất kho" name="group_picking" domain="[]" context="{'group_by': 'picking_id'}"/>
                    <filter string="Sản phẩm" name="group_product" domain="[]" context="{'group_by': 'product_id'}"/>
                    <filter string="Người xác nhận" name="group_user" domain="[]" context="{'group_by': 'confirm_user_id'}"/>
                    <filter string="Move" name="group_move" domain="[]" context="{'group_by': 'move_id'}"/>
                </group>
            </search>
        </field>
    </record>

     <!-- Action cho stock.move.line.confirm  -->
    <record id="action_stock_move_line_confirm" model="ir.actions.act_window">
        <field name="name">Xác nhận sản phẩm giao hàng</field>
        <field name="res_model">stock.move.line.confirm</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có xác nhận sản phẩm nào!
            </p>
            <p>
                Các xác nhận sản phẩm sẽ được tạo tự động khi quét QR code phiếu xuất kho.
            </p>
        </field>
    </record>

     <!-- Client Actions cho các loại QR Scanner  -->
    <record id="action_stock_picking_qr_scanner_outgoing" model="ir.actions.client">
        <field name="name">Quét QR xuất kho</field>
        <field name="tag">action_stock_picking_qr_scanner_outgoing</field>
        <field name="context">{'scan_type': 'outgoing'}</field>
    </record>

    <record id="action_stock_picking_qr_scanner_incoming" model="ir.actions.client">
        <field name="name">Quét QR nhập kho</field>
        <field name="tag">action_stock_picking_qr_scanner_incoming</field>
        <field name="context">{'scan_type': 'incoming'}</field>
    </record>

    <!-- <record id="action_stock_picking_qr_scanner_inventory" model="ir.actions.client">
        <field name="name">Quét QR kiểm kê kho</field>
        <field name="tag">action_stock_picking_qr_scanner_inventory</field>
        <field name="context">{'scan_type': 'inventory'}</field>
    </record> -->

     <!-- Menu Items - Cấu trúc menu mới -->
    <menuitem id="menu_stock_qr_code_root"
              name="QR xuất kho"
              web_icon="qr_scan_odoo_18/static/description/icon.png"
              sequence="50"/>

    <!-- Menu cha cho quét mã QR -->
    <menuitem id="menu_stock_qr_scanner_parent"
              name="Quét mã QR"
              parent="menu_stock_qr_code_root"
              sequence="10"/>

    <!-- Các submenu cho từng loại quét QR -->
    <menuitem id="menu_stock_qr_scanner_outgoing"
              name="Quét QR xuất kho"
              parent="menu_stock_qr_scanner_parent"
              action="action_stock_picking_qr_scanner_outgoing"
              sequence="10"/>

    <menuitem id="menu_stock_qr_scanner_incoming"
              name="Quét QR nhập kho"
              parent="menu_stock_qr_scanner_parent"
              action="action_stock_picking_qr_scanner_incoming"
              sequence="20"/>

    <!-- <menuitem id="menu_stock_qr_scanner_inventory"
              name="Quét QR kiểm kê kho"
              parent="menu_stock_qr_scanner_parent"
              action="action_stock_picking_qr_scanner_inventory"
              sequence="30"/> -->

    <!-- Đã bỏ menu "Xác nhận sản phẩm" theo yêu cầu -->
    
</odoo>